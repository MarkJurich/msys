# mingwPORT.functions
# Required.  Shell functions used by mingwPORT.

# ask "User prompt" "Default response" VariableToStoreResponse
function ask() {
  echo -n "$1 "
  [ -n "$2" ] && echo -n "($2) "
  read $3
  [ -z "$(eval echo \${$3\})" ] && eval $3=\"$2\"
}

# isyes $variable
function isyes() {
  case $1 in
    [Yy] | [Yy][Ee] | [Yy][Ee][Ss]) true ;;
    *) false ;;
  esac
}
